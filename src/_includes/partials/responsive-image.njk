{#
  Responsive Vehicle Image Partial
  Usage: {% include "partials/responsive-image.njk" %}
  Required variables: imgSrc (e.g., "/images/vehicles/e30-hero.jpg"), imgAlt, imgLoading (optional, default "lazy")
#}
{% set basePath = imgSrc | replace(".jpg", "") %}
{% set loading = imgLoading | default("lazy") %}
<picture>
    <source
        type="image/webp"
        srcset="{{ basePath }}-400.webp 400w,
                {{ basePath }}-800.webp 800w,
                {{ basePath }}-1200.webp 1200w,
                {{ basePath }}-1920.webp 1920w"
        sizes="(max-width: 480px) 400px,
               (max-width: 768px) 800px,
               (max-width: 1200px) 1200px,
               1920px">
    <source
        type="image/jpeg"
        srcset="{{ basePath }}-400.jpeg 400w,
                {{ basePath }}-800.jpeg 800w,
                {{ basePath }}-1200.jpeg 1200w,
                {{ basePath }}-1920.jpeg 1920w"
        sizes="(max-width: 480px) 400px,
               (max-width: 768px) 800px,
               (max-width: 1200px) 1200px,
               1920px">
    <img
        src="{{ imgSrc }}"
        alt="{{ imgAlt }}"
        loading="{{ loading }}"
        decoding="async">
</picture>
