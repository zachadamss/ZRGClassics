<!-- Footer -->
<footer>
    <div class="footer-content">
        <p>&copy; {{ site.year }} {{ site.name }}. All rights reserved.</p>
        <ul class="footer-links">
            <li><a href="/privacy/">Privacy Policy</a></li>
            <li><a href="/terms/">Terms of Service</a></li>
            <li><a href="/about/">About</a></li>
        </ul>
        {% set hasSocial = site.social.facebook or site.social.twitter or site.social.instagram %}
        {% if hasSocial %}
        <ul class="social-links">
            {% if site.social.facebook %}<li><a href="{{ site.social.facebook }}">Facebook</a></li>{% endif %}
            {% if site.social.twitter %}<li><a href="{{ site.social.twitter }}">Twitter</a></li>{% endif %}
            {% if site.social.instagram %}<li><a href="{{ site.social.instagram }}">Instagram</a></li>{% endif %}
        </ul>
        {% endif %}
    </div>
</footer>
