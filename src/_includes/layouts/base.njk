<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Generate dynamic SEO data for vehicle pages #}
    {% if vehicle and vehicles[vehicle] %}
        {% set vehicleData = vehicles[vehicle] %}
        {% set autoDescription = "Complete " + vehicleData.fullName + " (" + vehicleData.years + ") resource guide: common issues, repair costs, torque specs, parts suppliers, and DIY maintenance guides." %}
        {% set autoKeywords = vehicleData.fullName + ", " + vehicleData.model + " common issues, " + vehicleData.model + " repair guide, " + vehicleData.model + " torque specs, " + vehicleData.brand + " maintenance" %}
        {% set autoImage = vehicleData.heroImage %}
    {% endif %}

    <!-- Primary Meta Tags -->
    <title>{{ title }} - {{ site.name }}</title>
    <meta name="title" content="{{ title }} - {{ site.name }}">
    <meta name="description" content="{{ description | default(autoDescription) | default(site.description) }}">
    <meta name="keywords" content="{{ keywords | default(autoKeywords) | default(site.keywords) }}">
    <meta name="author" content="{{ site.name }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="{{ ogType | default('website') }}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:title" content="{{ ogTitle | default(title) }} - {{ site.name }}">
    <meta property="og:description" content="{{ ogDescription | default(description) | default(autoDescription) | default(site.description) }}">
    <meta property="og:image" content="{{ site.url }}{{ ogImage | default(autoImage) | default(site.defaultImage) }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="{{ site.locale }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
    <meta property="twitter:title" content="{{ ogTitle | default(title) }} - {{ site.name }}">
    <meta property="twitter:description" content="{{ ogDescription | default(description) | default(autoDescription) | default(site.description) }}">
    <meta property="twitter:image" content="{{ site.url }}{{ ogImage | default(autoImage) | default(site.defaultImage) }}">
    {% if site.twitterHandle %}
    <meta property="twitter:site" content="{{ site.twitterHandle }}">
    {% endif %}

    <!-- Favicon -->
    <link rel="icon" href="/images/favicon.ico" sizes="any">
    <link rel="apple-touch-icon" href="/images/logo.jpg">
    <meta name="theme-color" content="#1B263B">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet"></noscript>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles.css">

    <!-- JSON-LD Structured Data -->
    {# Organization Schema - Sitewide #}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "{{ site.name }}",
        "url": "{{ site.url }}",
        "logo": "{{ site.url }}/images/logo.jpg",
        "description": "{{ site.description }}",
        "sameAs": [
            {% if site.social.facebook %}"{{ site.social.facebook }}",{% endif %}
            {% if site.social.twitter %}"https://twitter.com/{{ site.twitterHandle | replace('@', '') }}",{% endif %}
            {% if site.social.instagram %}"{{ site.social.instagram }}"{% endif %}
        ]
    }
    </script>

    {# WebSite Schema with SearchAction #}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "{{ site.name }}",
        "url": "{{ site.url }}",
        "description": "{{ site.description }}",
        "potentialAction": {
            "@type": "SearchAction",
            "target": {
                "@type": "EntryPoint",
                "urlTemplate": "{{ site.url }}/search/?q={search_term_string}"
            },
            "query-input": "required name=search_term_string"
        }
    }
    </script>

    {# Breadcrumb Schema - If breadcrumbs defined #}
    {% if breadcrumbs and breadcrumbs.length > 0 %}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {% for crumb in breadcrumbs %}
            {
                "@type": "ListItem",
                "position": {{ loop.index }},
                "name": "{{ crumb.label }}",
                "item": "{% if crumb.url %}{{ site.url }}{{ crumb.url }}{% else %}{{ site.url }}{{ page.url }}{% endif %}"
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
    }
    </script>
    {% endif %}

    {# FAQ Schema - For vehicle pages with issues #}
    {% if vehicle and vehicles[vehicle] and vehicles[vehicle].issues and vehicles[vehicle].issues.length > 0 %}
    {% set vData = vehicles[vehicle] %}
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
            {% for issue in vData.issues %}{% if loop.index <= 10 %}
            {
                "@type": "Question",
                "name": "What is the {{ issue.title }} issue on the {{ vData.fullName }}?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "{{ issue.description | replace('"', '\\"') | replace('\n', ' ') }} Symptoms include: {{ issue.symptoms | replace('"', '\\"') }}. Typical repair cost: DIY {{ issue.repairCosts.diy }}, Shop {{ issue.repairCosts.shop }}."
                }
            }{% if loop.index < 10 and not loop.last %},{% endif %}
            {% endif %}{% endfor %}
        ]
    }
    </script>
    {% endif %}

    <!-- TODO: Replace GA_MEASUREMENT_ID with your actual Google Analytics 4 measurement ID -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'GA_MEASUREMENT_ID');
    </script>
</head>
<body>
    {% include "partials/header.njk" %}

    <div id="main-content">
        {{ content | safe }}
    </div>

    {% include "partials/footer.njk" %}

    <script src="/script.js"></script>
    <!-- Supabase Auth (loads on all pages for nav state) -->
    <script src="https://unpkg.com/@supabase/supabase-js@2"></script>
    <script src="/js/supabase.js"></script>
    {% if extraScripts %}
    {% for script in extraScripts %}
    <script src="/{{ script }}"></script>
    {% endfor %}
    {% endif %}
</body>
</html>
