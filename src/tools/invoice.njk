---
layout: layouts/base.njk
title: Invoice Creator
description: "Free mechanic invoice creator tool. Generate professional invoices for automotive repair work with customizable shop info, parts, labor, and tax calculations. Export to PDF."
keywords: "mechanic invoice, auto repair invoice, invoice generator, shop invoice template, automotive billing"
extraScripts:
  - js/garage.js
  - tools/invoice.js
---
<main>
    <div class="invoice-page-layout">
        <!-- Saved Invoices Panel -->
        <aside class="invoice-list-panel" id="invoice-list-panel">
            <div class="invoice-list-header">
                <h3>Saved Invoices</h3>
                <button type="button" class="btn-icon" id="toggle-invoice-list" title="Toggle panel">&#9776;</button>
            </div>
            <div class="invoice-list-body" id="invoice-list-body">
                <!-- Invoice list will be populated here -->
            </div>
        </aside>

        <!-- Main Invoice Form -->
        <div class="invoice-container">
            <div class="invoice-header-row">
                <h1 class="invoice-title">New Invoice</h1>
                <div class="save-indicator" id="save-indicator"></div>
            </div>

            <!-- Template Controls -->
            <div class="template-controls">
                <select id="template-select">
                    <option value="">-- Select Template --</option>
                </select>
                <button type="button" id="save-template-btn" class="btn-secondary">Save Template</button>
                <button type="button" id="delete-template-btn" class="btn-danger">Delete</button>
            </div>

            <form id="invoice-form">
                <!-- Shop Information -->
                <section class="invoice-section">
                    <h2>Shop Information</h2>
                    <div class="invoice-row">
                        <div class="invoice-col">
                            <label for="shop-name">Shop Name</label>
                            <input type="text" id="shop-name" name="shopName" placeholder="Your Shop Name">

                            <label for="shop-address">Address</label>
                            <textarea id="shop-address" name="shopAddress" rows="2" placeholder="Street Address&#10;City, State ZIP"></textarea>
                        </div>
                        <div class="invoice-col">
                            <label for="shop-phone">Phone</label>
                            <input type="tel" id="shop-phone" name="shopPhone" placeholder="(555) 123-4567">

                            <label for="shop-email">Email</label>
                            <input type="email" id="shop-email" name="shopEmail" placeholder="shop@example.com">
                        </div>
                    </div>
                </section>

                <!-- Invoice Details -->
                <section class="invoice-section">
                    <h2>Invoice Details</h2>
                    <div class="invoice-row">
                        <div class="invoice-col-third">
                            <label for="invoice-number">Invoice #</label>
                            <input type="text" id="invoice-number" name="invoiceNumber">
                        </div>
                        <div class="invoice-col-third">
                            <label for="invoice-date">Date</label>
                            <input type="date" id="invoice-date" name="invoiceDate">
                        </div>
                        <div class="invoice-col-third">
                            <label for="tax-rate">Tax Rate (%)</label>
                            <input type="number" id="tax-rate" name="taxRate" value="8.25" step="0.01" min="0" max="100">
                        </div>
                    </div>
                </section>

                <!-- Customer Information -->
                <section class="invoice-section">
                    <h2>Customer Information</h2>
                    <div class="invoice-row">
                        <div class="invoice-col">
                            <label for="customer-name">Name</label>
                            <input type="text" id="customer-name" name="customerName" placeholder="Customer Name">

                            <label for="customer-address">Address</label>
                            <textarea id="customer-address" name="customerAddress" rows="2" placeholder="Street Address&#10;City, State ZIP"></textarea>
                        </div>
                        <div class="invoice-col">
                            <label for="customer-phone">Phone</label>
                            <input type="tel" id="customer-phone" name="customerPhone" placeholder="(555) 123-4567">

                            <label for="customer-email">Email</label>
                            <input type="email" id="customer-email" name="customerEmail" placeholder="customer@example.com">
                        </div>
                    </div>
                </section>

                <!-- Vehicle Information -->
                <section class="invoice-section">
                    <h2>Vehicle Information</h2>
                    <div class="invoice-row">
                        <div class="invoice-col-third">
                            <label for="vehicle-year">Year</label>
                            <input type="number" id="vehicle-year" name="vehicleYear" placeholder="2024" min="1900" max="2100">
                        </div>
                        <div class="invoice-col-third">
                            <label for="vehicle-make">Make</label>
                            <input type="text" id="vehicle-make" name="vehicleMake" placeholder="BMW">
                        </div>
                        <div class="invoice-col-third">
                            <label for="vehicle-model">Model</label>
                            <input type="text" id="vehicle-model" name="vehicleModel" placeholder="E36 M3">
                        </div>
                    </div>
                    <div class="invoice-row">
                        <div class="invoice-col">
                            <label for="vehicle-vin">VIN</label>
                            <input type="text" id="vehicle-vin" name="vehicleVin" placeholder="WBSCD9323VEE12345" maxlength="17">
                        </div>
                        <div class="invoice-col">
                            <label for="vehicle-mileage">Mileage</label>
                            <input type="number" id="vehicle-mileage" name="vehicleMileage" placeholder="125000" min="0">
                        </div>
                    </div>
                </section>

                <!-- Parts -->
                <section class="invoice-section">
                    <h2>Parts</h2>
                    <table class="line-items-table" id="parts-table">
                        <thead>
                            <tr>
                                <th>Part Name</th>
                                <th>Part #</th>
                                <th>Qty</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                                <th class="no-print"></th>
                            </tr>
                        </thead>
                        <tbody id="parts-body">
                            <tr class="part-row">
                                <td data-label="Part Name"><input type="text" name="partName[]" placeholder="Part description"></td>
                                <td data-label="Part #"><input type="text" name="partNumber[]" placeholder="ABC123"></td>
                                <td data-label="Qty"><input type="number" name="partQty[]" value="1" min="1" class="qty-input"></td>
                                <td data-label="Price"><input type="number" name="partPrice[]" value="0.00" step="0.01" min="0" class="price-input"></td>
                                <td data-label="Total" class="line-total">$0.00</td>
                                <td class="no-print"><button type="button" class="remove-row-btn" onclick="removePartRow(this)">×</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="add-row-btn" onclick="addPartRow()">+ Add Part</button>
                </section>

                <!-- Labor -->
                <section class="invoice-section">
                    <h2>Labor</h2>
                    <table class="line-items-table" id="labor-table">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Hours</th>
                                <th>Rate ($/hr)</th>
                                <th>Total</th>
                                <th class="no-print"></th>
                            </tr>
                        </thead>
                        <tbody id="labor-body">
                            <tr class="labor-row">
                                <td data-label="Description"><input type="text" name="laborDesc[]" placeholder="Labor description"></td>
                                <td data-label="Hours"><input type="number" name="laborHours[]" value="1" step="0.25" min="0" class="hours-input"></td>
                                <td data-label="Rate"><input type="number" name="laborRate[]" value="85.00" step="0.01" min="0" class="rate-input"></td>
                                <td data-label="Total" class="line-total">$85.00</td>
                                <td class="no-print"><button type="button" class="remove-row-btn" onclick="removeLaborRow(this)">×</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="add-row-btn" onclick="addLaborRow()">+ Add Labor</button>
                </section>

                <!-- Summary -->
                <section class="invoice-section invoice-summary">
                    <h2>Summary</h2>
                    <div class="summary-row">
                        <span>Parts Subtotal:</span>
                        <span id="parts-subtotal">$0.00</span>
                    </div>
                    <div class="summary-row">
                        <span>Labor Subtotal:</span>
                        <span id="labor-subtotal">$85.00</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax (<span id="tax-rate-display">8.25</span>% on parts):</span>
                        <span id="tax-amount">$0.00</span>
                    </div>
                    <div class="summary-row summary-total">
                        <span>TOTAL:</span>
                        <span id="grand-total">$85.00</span>
                    </div>
                </section>

                <!-- Notes -->
                <section class="invoice-section">
                    <h2>Notes</h2>
                    <textarea id="invoice-notes" name="notes" rows="4" placeholder="Warranty information, payment terms, additional notes..."></textarea>
                </section>

                <!-- Actions -->
                <div class="invoice-actions">
                    <button type="button" id="new-invoice-btn" class="btn-secondary">New Invoice</button>
                    <button type="button" id="save-invoice-btn" class="btn-primary">Save Invoice</button>
                    <button type="button" id="print-btn" class="btn-primary">Print Invoice</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Save Template Modal -->
    <div id="template-modal" class="modal">
        <div class="modal-content">
            <h3>Save Template</h3>
            <p>Save your shop information as a reusable template.</p>
            <div class="form-group">
                <label for="template-name">Template Name</label>
                <input type="text" id="template-name" placeholder="My Shop Template">
            </div>
            <div class="form-group">
                <label for="template-labor-rate">Default Labor Rate ($/hr)</label>
                <input type="number" id="template-labor-rate" value="85.00" step="0.01" min="0">
            </div>
            <div class="form-group">
                <label class="checkbox-label">
                    <input type="checkbox" id="template-default">
                    Set as default template
                </label>
                <p class="form-hint">Default template is automatically loaded for new invoices</p>
            </div>
            <div class="modal-actions">
                <button type="button" id="cancel-template-btn" class="btn-secondary">Cancel</button>
                <button type="button" id="confirm-save-btn" class="btn-primary">Save</button>
            </div>
        </div>
    </div>
</main>
