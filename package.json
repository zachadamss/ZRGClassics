{
  "name": "zrg-classics",
  "version": "1.0.0",
  "description": "Resource Hub for Classic Porsche & BMW",
  "main": ".eleventy.js",
  "scripts": {
    "build": "eleventy",
    "build:search": "node build-search-index.js",
    "build:all": "node build-search-index.js && eleventy",
    "serve": "eleventy --serve",
    "watch": "eleventy --watch",
    "minify:css": "cleancss -o _site/styles.css _site/styles.css",
    "minify:js": "terser _site/script.js -o _site/script.js -c -m && terser _site/search.js -o _site/search.js -c -m && terser _site/tools/invoice.js -o _site/tools/invoice.js -c -m && terser _site/tools/build-calculator.js -o _site/tools/build-calculator.js -c -m && terser _site/tools/maintenance-tracker.js -o _site/tools/maintenance-tracker.js -c -m",
    "minify": "npm run minify:css && npm run minify:js",
    "build:prod": "npm run build:all && npm run minify"
  },
  "keywords": [
    "porsche",
    "bmw",
    "classic-cars",
    "resources"
  ],
  "author": "ZRG Classics",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.46.0"
  }
}
